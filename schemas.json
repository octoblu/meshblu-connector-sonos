{
  "schemas": {
    "version": "1.0.0",
    "form": {
      "message": {
        "example-01": {
          "angular": {
            "schema": ["*"]
          }
        }
      }
    },
    "configure": {
      "default-config": {
        "type": "object",
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "useCustomIP": {
                "title": "Use Custom IP?",
                "type": "boolean",
                "default": false,
                "required": false
              },
              "ip": {
                "type": "string",
                "required": false
              }
            }
          }
        }
      }
    },
    "message": {
      "play-url": {
        "title": "Play From URL",
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "default": "play-url",
            "x-schema-form": {
              "type": "hidden"
            }
          },
          "url": {
            "type": "string"
          }
        }
      },
      "current-track": {
        "title": "Get Current Track",
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "default": "current-track",
            "x-schema-form": {
              "type": "hidden"
            }
          }
        }
      }
    }
  }
}
